<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="mygridpane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.internshala.connect4game.Controller">
  <columnConstraints>
    <ColumnConstraints />
    <ColumnConstraints maxWidth="325.0" minWidth="239.0" prefWidth="239.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" />
    <RowConstraints />
  </rowConstraints>
   <children>
      <Pane GridPane.columnSpan="2" />
      <Pane fx:id="diskpane" prefHeight="400.0" prefWidth="200.0" style="-fx-background-color: #808080;" GridPane.rowIndex="1" />
      <VBox style="-fx-background-color: #000000;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="playeronetextfield" prefHeight="37.0" prefWidth="300.0" promptText="Set Player One Name">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="30.0" />
               </VBox.margin></TextField>
            <TextField fx:id="playertwotextfield" prefHeight="36.0" prefWidth="300.0" promptText="Set Player Two Name">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin></TextField>
            <Button fx:id="selectnamebutton" mnemonicParsing="false" prefHeight="37.0" prefWidth="300.0" text="Set Names">
               <VBox.margin>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Label fx:id="playername" alignment="CENTER" prefHeight="44.0" prefWidth="300.0" text="Player_One" textFill="#8d7f7f">
               <VBox.margin>
                  <Insets top="70.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="30.0" />
               </font></Label>
            <Label alignment="CENTER" prefHeight="45.0" prefWidth="300.0" text="Turn" textFill="#8d7f7f">
               <font>
                  <Font size="28.0" />
               </font></Label>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</GridPane>
